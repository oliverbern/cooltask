<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Days</th>
      <th>Done</th>
      <th>List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.body %></td>
        <td><%= task.days %></td>
        <td><%= task.done %></td>
        <td><%= task.list %></td>
        <td><%= link_to 'Show', list_tasks_path %></td>
        <td><%= link_to 'Edit', edit_list_task_path(task.list, task) %></td>
        <td><%= link_to 'Destroy', list_task_path(task.list, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

